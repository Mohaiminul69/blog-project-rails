<%= link_to 'New Post', new_blog_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>

<div class="space-y-6 mt-6">
  <% @posts.each do |post| %>
    <div class="border border-gray-300 p-4 rounded-lg shadow-md bg-white">
      <h1 class="text-2xl font-bold text-gray-900"><%= post.title %></h1>
      <p class="text-gray-700 mt-2"><%= post.body %></p>
      <div class="mt-4 space-x-2">
        <%= link_to 'Show', post, class: "text-blue-600 hover:underline" %>
        <%= link_to 'Edit', edit_blog_post_path(post), class: "text-yellow-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>