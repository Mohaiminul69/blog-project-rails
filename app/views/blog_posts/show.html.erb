<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <!-- Post Title -->
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>

  <!-- Post Body -->
  <p class="text-gray-700 mb-6"><%= @post.body %></p>

  <!-- Action Links -->
  <div class="flex gap-4">
    <%= link_to 'Back', root_path, class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    <%= link_to 'Edit', edit_blog_post_path(@post), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
</div>