<%= form_with model: post, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" do |form| %>
  
    <!-- Error Messages -->
    <% if form.object.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded">
        <% form.object.errors.full_messages.each do |message| %>
          <p class="text-sm"><%= message %></p>
        <% end %>
      </div>
    <% end %>
  
    <!-- Title Field -->
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_field :title, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <!-- Body Field -->
    <div class="mb-4">
      <%= form.label :content, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.rich_text_area :content, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 h-32" %>
    </div>
  
    <!-- Published At Field -->
    <div class="mb-4">
      <%= form.label :published_at, class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.datetime_select :published_at, include_blank: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 h-32" %>
    </div>
  
    <!-- Submit Button -->
    <div>
      <%= form.submit "Create Post", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full text-center font-semibold" %>
    </div>
  
<% end %>