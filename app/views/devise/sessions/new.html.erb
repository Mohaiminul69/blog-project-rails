<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mt-10">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    
    <!-- Email Field -->
    <div class="flex flex-col">
      <%= f.label :email, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Remember Me -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>

    <!-- Login Button -->
    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 font-semibold" %>
    </div>

  <% end %>

  <!-- Links (Forgot Password, Sign Up, etc.) -->
  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>